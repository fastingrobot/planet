body {
  background-color: #efefef;
  color: #333;
  margin-top: 0;
    margin-bottom: 0;
    margin-left: 0;
    margin-right: 0;
    padding-left: 0;
    padding-right: 0;
    font-size: 12px;
    font-family: "Lucida Grande", verdana, arial, helvetica, sans-serif;
}

a { color: #b00;}
a:visited {color: #b00;}

#header {
  height: 40px;
  padding: 10px 0px 0px 10px;
  background-color: #990000;
}

#main {
  margin-top: 20px;
  margin-left: 0px;
  padding: 0px;
  margin-right: 210px;
  padding: 10px 10px 10px 10px;
}

#sidebar {
  position: absolute;
  background-color: #eee;
  right: 0px;
  padding: 0px;
  width: 190px;
  padding: 10px 10px 10px 10px;
  border-left: 1px dotted #ccc;
}

#footer {
  clear: both;
  font-size: 9px;
  text-align: center;
}

/*   Header */

#header img {
  margin-left: 10px;
}
#header h1 {
  position: absolute;
  top: 15px;
  left: 75px;
  margin: 0 0 0 0;
  color: #fff;
  background-color: #990000;
  display: inline;
}

#header h1 a {
  color: #fff;
  text-decoration: none;
}

#header ul#nav {
  list-style-type: none;
  font-size: 12px;
  color: #b00;
  position: absolute;
  top: 42px;
  left: 35px;
}

#header ul#nav li {
  display: inline;
  padding: 5px;
}

#header ul#nav li a {
  color #b00;
}

#header ul#nav li a:visited {
  color: #b00;
}

#main div#nav h3 {
  display: inline;
  margin-right: 5px;
}

#main div#nav ul {
  list-style-type: none;
  display: inline;
  margin-left: 0px;
  padding-left: 0px;
}

#main div#nav ul li {
  display: inline;
}

#main div#nav ul li a {
  padding: 5px 5px 5px 5px;
  text-decoration: underline;
}

/* Entries */
div.entry {
  clear: both;
  margin: 0px 0px 10px 0px;
  padding: 5px 5px 5px 5px;
}

div.entry h2.title {
  padding: 2px;
  font-size: 14px;
  font-weight: bold;
  margin: 2px 2px 2px 2px;
}

div.entry h2.title a {
  color: #333;
}

div.entry p.metadata {
  margin: 1px 1px 1px 1px;
  font-size: 9px;
  color: #333;
}

div.entry div.body {
  font-size: 11px;
  margin: 5px 0px 0px 0px;
}

/* Sidebar */
#sidebar h3 {
}

#sidebar ul {
  list-style-type: none;
  margin-left: 0px;
  padding-left: 0px;
}

#sidebar ul li a {
  padding: 5px 5px 5px 5px;
  text-decoration: underline;
}


/* Suggest Form */
dl.suggest {
  
}

dl.suggest dt {
  float: left;
  margin: 0 5px 0 0;
  padding: 0;
  width: 80px;
  font-weight: normal;
  color: #444;
  text-align: right;
}

dl.suggest dd {
  margin: 0 0 0em;
  padding: 0;
}

div.operations {
  width: 300px;
  text-align: right;
}

/* Errors */
/* Errors */
.errorExplanation {
  border: 2px solid #b00;
  width: 350px;
}

.errorExplanation h2 {
  background-color: #b00;
  color: white;
  margin: 0px;
  padding: 5px;
}

.errorExplanation p {
  padding: 5px;
}

.fieldWithErrors {
  display: inline;
  padding: 0;
  margin: 0;
}

.fieldWithErrors input, .fieldWithErrors select {
    background-color: #ffdfdf;
}

pre {
  border: 1px solid #bbb;
  background-color: #eee;
  padding: 5px;
}

div.right-floaty {
  float: right;
}