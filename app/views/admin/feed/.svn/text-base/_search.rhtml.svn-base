<div class="form">
  <%= start_form_tag :action=>"search" %>
  <h3>Search For A Feed</h3>
  <div class="form_container">
    <dl>
      <dt>Title:</dt>
      <dd><%= text_field "feed", "title" %></dd>
      <dt>Author:</dt>
      <dd><%= text_field "feed", "author" %></dd>
    </dl>
    <div class="operations">
      <%= submit_tag "Search For Feed" %> or <%= link_to_function "Cancel", "new Effect.BlindUp('search')" %>
    </div>
  </div>
  <%= end_form_tag %>
</div>