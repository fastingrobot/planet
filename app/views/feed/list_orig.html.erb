<h1>Listing feeds</h1>

<table style="width:600px;">
  <tr>
    <th>Author</th>
    <th>Name</th>
    <th align="left">Options</th>
  </tr>
  
<% for feed in @feeds %>
  <tr>
    <td><%=h feed.author %></td>
    <td><%=h feed.name %></td>
    <td align="left">
    <%= link_to 'Show', :action => 'show', :id => feed.id %> |
    <%= link_to 'Edit', :action => 'edit', :id => feed.id %> |
    <%= link_to 'Destroy', {:action => 'destroy', :id => feed.id}, {:confirm => "are you sure you want to delete feed #{feed.name}?"} %>
    <% if feed.approved == 0 %>
       &nbsp;| <%= link_to 'Approve', :action=>'approve', :id=> feed.id %>
    <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New feed', :action => 'new' %>
